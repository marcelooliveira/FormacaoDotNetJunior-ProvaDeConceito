@{
    ViewData["Title"] = "Cadastro";
}
@model CasaDoCodigo.Models.Cadastro

<h3>Cadastro</h3>

@using (Html.BeginForm("Resumo", "Pedido", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label" for="nomeCliente">Nome do Cliente</label>
                    @Html.TextBoxFor(t => t.Nome, new { @class = "form-control", id = "nomeCliente", placeholder = "Nome do Cliente" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(t => t.Nome)
                    </span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="email">Email</label>
                    @Html.TextBoxFor(t => t.Email, new { @class = "form-control", id = "email", placeholder = "Email" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(t => t.Email)
                    </span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="telefone">Telefone</label>
                    @Html.TextBoxFor(t => t.Telefone, new { @class = "form-control", id = "telefone", placeholder = "Telefone" })
                    @*<span asp-validation-for="@Model.Telefone" class="text-danger"></span>*@
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label" for="endereco">Endereço</label>
                    @Html.TextBoxFor(t => t.Endereco, new { @class = "form-control", id = "endereco", placeholder = "Endereço" })
                    @*<span asp-validation-for="@Model.Endereco" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label class="control-label" for="complemento">Complemento</label>
                    @Html.TextBoxFor(t => t.Complemento, new { @class = "form-control", id = "complemento", placeholder = "Complemento" })
                    @*<span asp-validation-for="@Model.Complemento" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label class="control-label" for="bairro">Bairro</label>
                    @Html.TextBoxFor(t => t.Bairro, new { @class = "form-control", id = "bairro", placeholder = "Bairro" })
                    @*<span asp-validation-for="@Model.Bairro" class="text-danger"></span>*@
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label" for="municipio">Município</label>
                    @Html.TextBoxFor(t => t.Municipio, new { @class = "form-control", id = "municipio", placeholder = "Municipio" })
                    @*<span asp-validation-for="@Model.Municipio" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label class="control-label" for="UF">UF</label>
                    <select class="form-control single-select" name="UF"
                            asp-for="@Model.UF">
                        <option selected value="">[Selecione o estado]</option>
                        <option value="AC">Acre</option>
                        <option value="AL">Alagoas</option>
                        <option value="AP">Amapá</option>
                        <option value="AM">Amazonas</option>
                        <option value="BA">Bahia</option>
                        <option value="CE">Ceará</option>
                        <option value="DF">Distrito Federal</option>
                        <option value="ES">Espírito Santo</option>
                        <option value="GO">Goiás</option>
                        <option value="MA">Maranhão</option>
                        <option value="MT">Mato Grosso</option>
                        <option value="MS">Mato Grosso do Sul</option>
                        <option value="MG">Minas Gerais</option>
                        <option value="PA">Pará</option>
                        <option value="PB">Paraíba</option>
                        <option value="PR">Paraná</option>
                        <option value="PE">Pernambuco</option>
                        <option value="PI">Piauí</option>
                        <option value="RJ">Rio de Janeiro</option>
                        <option value="RN">Rio Grande do Norte</option>
                        <option value="RS">Rio Grande do Sul</option>
                        <option value="RO">Rondônia</option>
                        <option value="RR">Roraima</option>
                        <option value="SC">Santa Catarina</option>
                        <option value="SP">São Paulo</option>
                        <option value="SE">Sergipe</option>
                        <option value="TO">Tocantins</option>
                    </select>
                    @*<span asp-validation-for="@Model.UF" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label class="control-label" for="cep">CEP</label>
                    @Html.TextBoxFor(t => t.CEP, new { @class = "form-control", id = "cep", placeholder = "CEP" })
                    @*<span asp-validation-for="@Model.CEP" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    @Html.ActionLink("Continuar Comprando", "Carrossel", "Pedido", null, new { @class = "btn btn-success" })
                </div>
                <div class="form-group">
                    <button type="submit"
                            class="btn btn-success">
                        Finalizar Pedido
                    </button>
                </div>
            </div>
        </div>
    </div>
}